{
  "name": "seqdiag",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm run build:parser && run-p build:dist",
    "build:parser": "tspeg src/grammar.pegjs src/parser.ts",
    "build:dist": "esbuild src/index.ts --bundle --minify --sourcemap --outfile=dist/seqdiag.min.js",
    "build:dist:watch": "esbuild src/index.ts --watch --bundle --minify --sourcemap --outfile=dist/seqdiag.min.js",
    "start": "npm-run-all -p build:dist:watch start:server",
    "start:server": "reload -b -s example/index.html",
    "test": "npm run build:parser && jest"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@jest/types": "^29.4.1",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.11.18",
    "canvas": "^2.11.0",
    "esbuild": "^0.17.11",
    "jest": "^29.4.1",
    "jest-environment-jsdom": "^29.5.0",
    "npm-run-all": "^4.1.5",
    "reload": "^3.2.1",
    "rimraf": "^4.1.2",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "@svgdotjs/svg.filter.js": "^3.0.8",
    "@svgdotjs/svg.js": "^3.1.2",
    "tspeg": "^3.2.1"
  }
}
